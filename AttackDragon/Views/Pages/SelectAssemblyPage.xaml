<Page x:Class="AttackDragon.Views.Pages.SelectAssemblyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AttackDragon.Views.Pages"
      FontFamily="{StaticResource Fonts.FiraCode}"
      mc:Ignorable="d" Background="{StaticResource AttackDragon.SolidColorBrushes.MajestyDark}"
      d:DesignHeight="450" d:DesignWidth="800" Foreground="{StaticResource  AttackDragon.SolidColorBrushes.MajestyGray}"
      Title="SelectAssemblyPage">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Height="150" Margin="0 0 0 10" Source="{StaticResource AttackDragon.Image}" />
            <TextBlock Margin="0 0 0 20" TextAlignment="Center" FontSize="30">Attack Dragon</TextBlock>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Select an assembly to start testing:</TextBlock>
                <Button Margin="5 0" Click="Button_Click" Padding="5">Open Assembly...</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
